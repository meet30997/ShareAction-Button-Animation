<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/con1"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/fbbtn"
            app:layout_constraintEnd_toEndOf="@+id/centerbtn"
            app:layout_constraintStart_toStartOf="@+id/centerbtn"
            android:id="@+id/upbtn" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/twitter"

            app:layout_constraintTop_toTopOf="@+id/centerbtn"
            app:layout_constraintBottom_toBottomOf="@+id/centerbtn"
            android:id="@+id/rightbtn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/leftbtn"
            android:background="@drawable/gplusbtn"

            app:layout_constraintTop_toTopOf="@+id/centerbtn"
            app:layout_constraintBottom_toBottomOf="@+id/centerbtn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />

    <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/downbtn"
            android:background="@drawable/whatsapp"

            app:layout_constraintEnd_toEndOf="@+id/centerbtn"
            app:layout_constraintStart_toStartOf="@+id/centerbtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:elevation="15dp"
            android:background="@drawable/share"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/centerbtn"/>

</android.support.constraint.ConstraintLayout>